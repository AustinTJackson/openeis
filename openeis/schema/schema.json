{
	"$schema": "http://json-schema.org/draft-04/schema#",
	
	"type": "object",
	"required": ["sites"],
	"additionalProperties": false,
	"properties": {
		"sites": {
			"type": "array",
			"uniqueItems": true,
			"additionalItems": {"$ref": "#definitions/site"},
			"minItems": 1,
			"items": [
				{"$ref": "#definitions/site"}
			]
		}			
	},	
		
	"definitions": {		
		"address": {
			"type": "object",
			"properties": {
				"street_address":	{"type": "string"},
				"city":				{"type": "string"},
				"zip_code":			{"type": "string"}
			}
		},
		
		"site": {
			"type": "object",
			"object_type": "site",
			"required": ["site_name"],
			"properties": {
				"site_name": {"type": "string"},
				"site_address": {"$ref": "#/definitions/address"},
				"buildings": {
					"type": "array",
					"items": [
						{"$ref": "#/definitions/building"}
					]
				},
				"sensors": {
					"type": "array",
					"description": "There can be one or more sensors for a site",
					"additionalItems": {"$ref": "#definitions/sensor"},
					"items": [
						{"$ref": "#definitions/sensor"}
					]
				}				
			}
		},
		
		"building": {
			"type": "object",
			"required": ["building_name"],
			"properties": {
				"building_name": {"type": "string"},
				"building_address": {"$ref": "#/definitions/address"},
				"systems": {
					"type": "array",
					"items": [
						{"$ref": "#definitions/system"}
					]
				},
				"sensors": {
					"type": "array",
					"description": "There can be one or more sensors for a site",
					"additionalItems": {"$ref": "#definitions/sensor"},
					"items": [
						{"$ref": "#definitions/sensor"}
					]
				}	
			}			
		},
		
		"system": {
			"type": "object",
			"required":["system_name", "system_type"],
			"properties": {
				"system_name": {"type": "string"},
				"system_type": {"type": "string"},
				"subsystem": {
					"type": "array",
					"items": [
						{"$ref": "#definitions/subsystem"}
					]
				},
				"sensors": {
					"type": "array",
					"description": "There can be one or more sensors for a site",
					"additionalItems": {"$ref": "#definitions/sensor"},
					"items": [
						{"$ref": "#definitions/sensor"}
					]
				}	 
			}		
		},
				
		"subsystem": {
			"type": "object",
			"required":["system_name", "system_type"],
			"properties": {
				"system_name": {"type": "string"},
				"system_type": {"type": "string"}
			}
		},
		
		"chiller": {
			"allOf": [{"$ref": "#/definitions/system"}],
			"properties":{
				"subsystem": {
					"enum": [
						"pump","cooling_tower"
					]
				} 			
			}
		},
		
		"pump": {
			"allOf": [{"$ref": "#/definitions/subsystem"}],
			"properties":{
				
			}
		},
		"cooling_tower": {
			"allOf": [{"$ref": "#/definitions/subsystem"}],
			"properties":{
				
			}
		},
		
		"rtu": {
			"allOf": [ { "$ref": "#/definitions/system" }],						
			"required":["system_name", "system_type", "sensor_type"],
			"properties": {
				"sensors": {
						"type": "array",
						"description": "There can be one or more sensors for a site",
						"additionalItems": {"$ref": "#definitions/rtu_sensor"},
						"items": [
							{"$ref": "#definitions/rtu_sensor"}
						]
					}	 
				                        
			
			}
			
		},		
		"rtu_sensor": {
			"allOf": [ { "$ref": "#/definitions/sensor" }],		
			"type": "object",
			"properties": {
				"sensor_type": {
					"enum": [
							"OutdoorAirTemperature",
                            "OutdoorAirRelativeHumidity",
                            "MixedAirTemperature",
                            "MixedAirRelativeHumidity",
                            "ReturnAirTemperature",
                            "ReturnAirRelativeHumidity",
                            "DischargeAirTemperature",
                            "DischargeAirRelativeHumidity",
                            "FirstStageCooling",
                            "SecondStageCooling",
                            "FirstStageHeating",
                            "SecondStageHeating",
                            "TotalPower",
                            "SupplyFanPower",
                            "CondenserFanPower",
                            "OutdoorDamperSignal",
                            "EconomizerMode",
                            "OccupancyMode",
                            "ZoneSetpoint",
                            "ZoneTemperature",
                            "SupplyFanSpeed"
					]
				}
			}
		},
	
		"sensor": {
			"type": "object",
			"required": ["sensor_name","unit_type", "data_type", "sensor_type"],
			"properties": {
				"sensor_name": {"type": "string"},
				"data_type": {"enum": ["boolean", "float"]},
				"minimum_value": {"type": "number"},
				"maximum_value": {"type": "number"},
				"sensor_type": {
					"enum": [
						"OutdoorAirTemperature",
						"OutdoorAirRelativeHumidity",
						"MixedAirTemperature",
						"MixedAirRelativeHumidity",
						"ReturnAirTemperature",
						"ReturnAirRelativeHumidity",
						"DischargeAirTemperature",
						"DischargeAirRelativeHumidity",
						"FirstStageCooling",
						"SecondStageCooling",
						"FirstStageHeating",
						"SecondStageHeating",
						"TotalPower",
						"SupplyFanPower",
						"CondenserFanPower",
						"OutdoorDamperSignal",
						"EconomizerMode",
						"OccupancyMode",
						"ZoneSetpoint",
						"ZoneTemperature",
						"SupplyFanSpeed",
						"WboleBuildingElectricity",
						"WholeBuildingGas"
					]
				},
				"unit_type": {					
					"enum": [
						"acceleration",
						"angular_acceleration",
						"angular_momentum",
						"angular_velocity",
						"apparent_energy",
						"apparent_power",
						"area",
						"bytes",
						"capacitance",
						"cooling_efficiency",
						"currency",
						"density",
						"dimensionless",
						"electric_charge",
						"electric_conductance",
						"electric_current",
						"electric_current_density",
						"electric_field_strength",
						"electric_potential",
						"electric_resistance",
						"electrical_conductivity",
						"electrical_resistivity",
						"energy",
						"energy_by_area",
						"enthalpy",
						"entropy",
						"force",
						"frequency",
						"grammage",
						"heating_rate",
						"illuminance",
						"inductance",
						"irradiance",
						"length",
						"luminescence",
						"luminous_flux",
						"magnetic_field_strength",
						"magnetic_flux",
						"magnetic_flux_density",
						"mass",
						"mass_flow",
						"momentum",
						"power",
						"power_by_area",
						"power_by_volumetric_flow",
						"pressure",
						"reactive_energy",
						"reactive_power",
						"specific_entropy",
						"surface_tension",
						"temperature",
						"temperature_differential",
						"thermal_conductivity",
						"time",
						"velocity",
						"volume",
						"volumetric_flow"
					]
				}
			}
		},
			
		
		"rtu_sensor": {
			"allOf": [ { "$ref": "#/definitions/sensor" }],			
			"required": ["sensor_name","unit_type", "data_type", "sensor_type"],		
			"properties": {
				"sensor_type": {
					"enum": [
						"OutdoorAirTemperature",
		                "OutdoorAirRelativeHumidity",
		                "MixedAirTemperature",
		                "MixedAirRelativeHumidity",
		                "ReturnAirTemperature",
		                "ReturnAirRelativeHumidity",
		                "DischargeAirTemperature",
		                "DischargeAirRelativeHumidity",
		                "FirstStageCooling",
		                "SecondStageCooling",
		                "FirstStageHeating",
		                "SecondStageHeating",
		                "TotalPower",
		                "SupplyFanPower",
		                "CondenserFanPower",
		                "OutdoorDamperSignal",
		                "EconomizerMode",
		                "OccupancyMode",
		                "ZoneSetpoint",
		                "ZoneTemperature",
		                "SupplyFanSpeed"
		             ]
				}
			}
		},
		
		"keyvaluepair":{
			"type": "object",
			"required": ["key", "value"],
			"properties": {
				"key": { "type": "string"},
				"value": { "type": "string"}
			}
		},
		
		"unit": {
			"type": "object",
			"required": ["name", "values"],
			"properties": {
				"name": {"type": "string"},
				"values": {
					"type": "array",
					"minItems": 1,
					"additionalItems": {"$ref": "#definitions/keyvaluepair"},
					"items": [
						{"$ref": "#definitions/keyvaluepair"}
					]
				}
			}
		}				
	}	
}